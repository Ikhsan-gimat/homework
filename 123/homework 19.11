import math
from abc import ABC, abstractmethod

class Shape(ABC):
    def info(self):
        return self.__class__.__name__
    @abstractmethod
    def calculate_area(self):
        pass
    def calculate_perimeter(self):
        pass



class Square(Shape):
    def info(self):
        return "Square"
    def __init__(self, side):
        self.side = side
    @abstractmethod
    def calculate_area(self):
        return self.side ** 2
    def calculate_perimeter(self):
        return  self.side *2



    def __str__(self):
        return (f"квадрат со стороной {self.side}")

    def __len__(self):
        return self.side ** 2

    #def __eq__(self, other):


class Circle(Shape):
    def info(self):
        return "Circle"
    def __init__(self, radius):
        self.radius = radius
    def calculate_area(self):
        return (math.pi * self.radius )** 2
    def calculate_perimeter(self):
        return 2 * math.pi * self.radius


    def __str__(self):
        return (f"Круг с радиусом{self.radius}")
    def __len__(self):
        return 2 * math.pi * self.radius
    #def __eq__(self, other):




